<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bz"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.AboutFragment">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:background="@drawable/img_back_ring"
                android:id="@+id/ChildImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/child_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_20dp"/>
            <LinearLayout
                android:id="@+id/name"
                android:layout_below="@id/ChildImage"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginEnd="@dimen/margin_8dp"
                android:layout_marginBottom="@dimen/margin_4dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_2dp"
                    android:layout_marginTop="@dimen/margin_6dp"
                    android:padding="@dimen/padding_2dp"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/back_shap_ring">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_50dp"
                        app:errorEnabled="true"
                        app:hintEnabled="false"
                        app:hintAnimationEnabled="false">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/childName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/margin_12dp"
                            android:layout_marginStart="@dimen/margin_12dp"
                            android:background="@null"
                            android:drawablePadding="@dimen/margin_12dp"
                            android:hint="Jenni"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:padding="@dimen/padding_6dp" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/DateOfBirth"
                android:layout_below="@+id/name"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_4dp"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginEnd="@dimen/margin_8dp"
                android:layout_marginBottom="@dimen/margin_4dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_2dp"
                    android:layout_marginTop="@dimen/margin_6dp"
                    android:padding="@dimen/padding_2dp"
                    android:text="Date of Birth"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16sp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/back_shap_ring">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_50dp"
                        app:errorEnabled="true"
                        app:hintEnabled="false"
                        app:hintAnimationEnabled="false">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/childDateOfbirth"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/margin_12dp"
                            android:layout_marginStart="@dimen/margin_12dp"
                            android:background="@null"
                            android:drawablePadding="@dimen/margin_12dp"
                            android:textColor="@color/black"
                            android:hint="26-01-1994"
                            android:maxLines="1"
                            android:focusableInTouchMode="false"
                            android:padding="@dimen/padding_6dp" />
                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/calenderData"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/margin_10dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_calendar"/>
                </RelativeLayout>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/Gender"
                android:layout_below="@+id/DateOfBirth"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_4dp"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginEnd="@dimen/margin_8dp"
                android:layout_marginBottom="@dimen/margin_4dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_2dp"
                    android:layout_marginTop="@dimen/margin_6dp"
                    android:padding="@dimen/padding_2dp"
                    android:text="Gender"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/back_shap_ring">

                    <Spinner
                        android:id="@+id/gender"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_50dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:entries="@array/gender"
                        android:prompt="@string/Gender"
                        android:hint="PickUp Gender" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/email"
                android:orientation="vertical"
                android:layout_below="@id/Gender"
                android:layout_marginTop="@dimen/margin_4dp"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginEnd="@dimen/margin_8dp"
                android:layout_marginBottom="@dimen/margin_4dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_2dp"
                    android:layout_marginTop="@dimen/margin_6dp"
                    android:padding="@dimen/padding_2dp"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/back_shap_ring">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_50dp"
                        app:errorEnabled="true"
                        app:hintEnabled="false"
                        app:hintAnimationEnabled="false">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ChildemailEdit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/margin_12dp"
                            android:layout_marginStart="@dimen/margin_12dp"
                            android:background="@null"
                            android:drawablePadding="@dimen/margin_12dp"
                            android:hint="omninos@info.com"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:padding="@dimen/padding_6dp" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phone"
                android:orientation="vertical"
                android:layout_below="@id/email"
                android:layout_marginTop="@dimen/margin_4dp"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginEnd="@dimen/margin_8dp"
                android:layout_marginBottom="@dimen/margin_4dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_2dp"
                    android:layout_marginTop="@dimen/margin_6dp"
                    android:padding="@dimen/padding_2dp"
                    android:text="Phone Number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/back_shap_ring">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_50dp"
                        app:errorEnabled="true"
                        app:hintEnabled="false"
                        app:hintAnimationEnabled="false">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/childNumber"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/margin_12dp"
                            android:layout_marginStart="@dimen/margin_12dp"
                            android:background="@null"
                            android:drawablePadding="@dimen/margin_12dp"
                            android:hint="+91-9999988888"
                            android:inputType="number"
                            android:maxLines="1"
                            android:padding="@dimen/padding_6dp" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/timeZone"
                android:orientation="vertical"
                android:layout_below="@id/phone"
                android:layout_marginTop="@dimen/margin_4dp"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginEnd="@dimen/margin_8dp"
                android:layout_marginBottom="@dimen/margin_4dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_2dp"
                    android:layout_marginTop="@dimen/margin_6dp"
                    android:padding="@dimen/padding_2dp"
                    android:text="Timezone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/back_shap_ring">

                    <Spinner
                        android:id="@+id/childTimeZone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_50dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:entries="@array/gender"
                        android:prompt="@string/Gender"
                        android:hint="PickUp Gender" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_below="@id/timeZone"
                android:id="@+id/Save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_4dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginStart="@dimen/margin_22dp"
                android:layout_marginEnd="@dimen/margin_22dp"
                android:background="@drawable/back_button"
                android:text="Save"
                android:layout_marginBottom="@dimen/margin_22dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16sp" />
        </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>